{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "mcp__deepwiki__read_wiki_contents",
      "Bash(npm run test:*)",
      "Bash(npm test:*)",
      "Bash(npm run build:*)",
      "mcp__deepwiki__read_wiki_structure",
      "mcp__deepwiki__ask_question",
      "Bash(find:*)",
      "Bash([ -d /Volumes/SSD/development/cc-deck/.kiro ])",
      "Bash(mkdir:*)",
      "WebFetch(domain:azukiazusa.dev)",
      "mcp__brave-search__brave_web_search",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "Bash(git add:*)",
      "Bash(mcp__serena__initial_instructions)",
      "Bash(mcp list-tools:*)",
      "Bash(find:*)",
      "Bash(tree:*)",
      "Bash(env)",
      "Bash(npx create-next-app:*)",
      "Bash(rm:*)",
      "Bash(npm install)",
      "Bash(npm install:*)",
      "Bash(mkdir:*)",
      "mcp__context7__resolve-library-id",
      "Bash(python test:*)",
      "Bash(python3:*)",
      "Bash(/dev-env-setup liquid-glass-tech-blog)",
      "WebFetch(domain:)",
      "Bash(chmod:*)"
    ],
    "deny": []
  },
  "searchDefaults": {
    "useCurrentDate": true,
    "dateUtilityAgent": "date-utility",
    "searchYearStrategy": "current_and_recent"
  },
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "deepwiki": {
      "serverUrl": "https://mcp.deepwiki.com/sse"
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "/Volumes/SSD/development/cc-deck"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@executeautomation/playwright-mcp-server"
      ]
    }
  }
}